{
  "name": "react-stalker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/knex": "^0.14.26",
    "@types/method-override": "^0.0.31",
    "@types/morgan": "^1.7.35",
    "@types/pg": "^7.4.10",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "knex": "^0.15.2",
    "method-override": "^2.3.10",
    "morgan": "^1.9.0",
    "pg": "^7.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/chai-http": "^3.0.5",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^4.16.3",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/mocha": "^5.2.5",
    "@types/prettier": "^1.13.2",
    "@types/supertest": "^2.0.6",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "concurrently": "^4.0.1",
    "errorhandler": "^1.5.0",
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^13.0.1",
    "prettier": "1.14.2",
    "supertest": "^3.3.0",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "build-ts": "tsc -b server",
    "watch-ts": "tsc -w -p server",
    "serve": "node server/dist/index.js",
    "serve-debug": "nodemon --inspect server/dist/index.js",
    "watch-node": "nodemon server/dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "watch-test": "yarn run test -- --watchAll",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "start": "yarn run build && yarn run serve && yarn run serve-client",
    "build": "yarn run build-ts && yarn run tslint && yarn run copy-static-assets",
    "debug": "yarn run build && yarn run watch-debug",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text mocha server/dist/test",
    "precommit": "lint-staged",
    "prepush": "yarn run test",
    "build-client": "cd client && yarn run build",
    "dev": "yarn run serve-client & nodemon server/dist/index.js",
    "postinstall": "cd client && yarn",
    "serve-client": "cd client && yarn start",
    "heroku-postbuild": "yarn run build-client",
    "test-client": "cd client && yarn test"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
