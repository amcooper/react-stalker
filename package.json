{
  "name": "react-stalker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "knex": "^0.15.2",
    "method-override": "^2.3.10",
    "morgan": "^1.9.0",
    "pg": "^7.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^13.0.1",
    "prettier": "1.14.2",
    "supertest": "^3.3.0"
  },
  "scripts": {
    "build-client": "cd ./client && yarn run build",
    "dev": "yarn run serve-client & nodemon ./server/index.js",
    "test": "NODE_ENV=test npx nyc --reporter=html --reporter=text mocha ./server/test",
    "precommit": "lint-staged",
    "prepush": "yarn run test",
    "postinstall": "cd ./client && yarn",
    "serve-client": "cd ./client && yarn start",
    "start": "npx http-server ./client/public && node ./server/index.js",
    "test-client": "cd ./client && yarn test"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
